<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/checkout.css">
</head>
<body>

<%- include('../includes/navigation.ejs') %>
<div class="wrapper">
    <div class="container">
        <form action="">
            <h1>
                <i class="fas fa-shipping-fast"></i>
                Lieferadresse
            </h1>
            <div class="name">
                <div>
                    <label for="f-name">Vorname</label>
                    <input type="text" name="f-name">
                </div>
                <div>
                    <label for="l-name">Name</label>
                    <input type="text" name="l-name">
                </div>
            </div>
            <div class="street">
                <label for="name">Straße</label>
                <input type="text" name="address">
            </div>
            <div class="address-info">
                <div>
                    <label for="city">Stadt</label>
                    <input type="text" name="city">
                </div>
                <div>
                    <label for="state">Bundesland</label>
                    <input type="text" name="state">
                </div>
                <div>
                    <label for="zip">Postleitzahl</label>
                    <input type="text" name="zip">
                </div>
            </div>
            <h1>
                <i class="far"></i> Zahlungsinformationen
            </h1>
            <div class="cc-num">
                <label for="card-num">Kartennummer</label>
                <input type="text" name="card-num">
            </div>
            <div class="cc-info">
                <div>
                    <label for="card-num">Gültig bis</label>
                    <input type="text" name="expire">
                </div>
                <div>
                    <label for="card-num">CCV</label>
                    <input type="text" name="security">
                </div>
            </div>
            <div class="btns">
                <a href="/">
                <p  style="background-color: black; color: white"> Bestellen</p>
                </a>
                <a href="/cart">
                <p  style="background-color: black; color: white"> Warenkorb</p>
                </a>
            </div>
        </form>
    </div>
</div>

<%- include('../includes/footer.ejs') %>

</body>
</html>