<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/login.css">
</head>
<body>

<%- include('../includes/navigation.ejs') %>

    <div class="container">
        <h1>Login</h1>
        <form action="" method="POST">
            <label for="user_email">Email</label>
            <input type="email" class="input" name="_email" id="user_email" placeholder="Bitte Email eingeben">
            <label for="user_pass">Passwort</label>
            <input type="password" class="input" name="_password" id="user_pass" placeholder="Bitte Passwort eingeben">
            <% if(typeof error !== 'undefined'){ %>
                <div class="err-msg"><%= error %></div><% } %>
            <input type="submit" value="Login">

            <div class="link"><a href="/register">Registrieren</a></div>
        </form>
    </div>
</body>



</html>